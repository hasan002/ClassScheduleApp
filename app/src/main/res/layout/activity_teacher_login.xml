<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center"
tools:context=".TeacherLoginActivity"

    >

<ImageView
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:src="@drawable/varsity_logo"
    android:scaleType="centerInside"
    android:padding="5dp"

    />

<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.design.widget.TextInputEditText
        android:id="@+id/edtTxt_tc_login_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="12dp"
        android:hint="Email"
        android:inputType="textPersonName"
        android:background="@drawable/border_style"
        />

</android.support.design.widget.TextInputLayout>


<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:passwordToggleEnabled="true"
    >

    <android.support.design.widget.TextInputEditText
        android:id="@+id/edtTxt_tc_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="12dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/border_style"
        />


</android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtTxt_tc_varification_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="12dp"
            android:hint="Varification Code"
            android:inputType="textPassword"
            android:background="@drawable/border_style"
            />


    </android.support.design.widget.TextInputLayout>


<Button
    android:id="@+id/btn_tc_login"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="12dp"
    android:textAllCaps="false"
    android:textSize="20sp"
    android:text="Login"
    android:textColor="#ffffff"
    android:background="@drawable/button_border_style"
    />


</LinearLayout>